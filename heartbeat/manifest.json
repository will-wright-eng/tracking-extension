{
  "manifest_version": 3,
  "name": "Heartbeat",
  "description": "dev",
  "version": "0.2.3",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "host_permissions": ["<all_urls>"],
  "minimum_chrome_version": "93",
  "background": {
    "service_worker": "js/background.js",
    "type": "module"//,
    // "persistent": false
  },
  "content_scripts": [{
      "js": ["js/foreground.js"],
      "matches": ["*://*/*"]
  }],
  "permissions": [
    "nativeMessaging",
    "tabGroups",
    "storage",
    "alarms",
    "tabs",
    "idle"
  ]

}
